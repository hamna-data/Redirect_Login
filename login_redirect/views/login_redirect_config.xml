<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_login_redirect_config_form" model="ir.ui.view">
            <field name="name">login.redirect.config.form</field>
            <field name="model">login.redirect.config</field>
            <field name="arch" type="xml">
                <form string="Login Redirect Configuration">
                    <sheet>
                        <div class="alert alert-info" role="alert">
                            <p>Configure login credentials and redirect URLs for users who match the specified username and password.</p>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="username"/>
                                <field name="password" password="True"/>
                            </group>
                        </group>
                        <group>
                            <field name="redirect_url" colspan="4"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_login_redirect_config_list" model="ir.ui.view">
            <field name="name">login.redirect.config.list</field>
            <field name="model">login.redirect.config</field>
            <field name="arch" type="xml">
                <list string="Login Redirect Configurations">
                    <field name="name"/>
                    <field name="username"/>
                    <field name="redirect_url"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_login_redirect_config_search" model="ir.ui.view">
            <field name="name">login.redirect.config.search</field>
            <field name="model">login.redirect.config</field>
            <field name="arch" type="xml">
                <search string="Search Redirect Configurations">
                    <field name="name"/>
                    <field name="username"/>
                    <field name="redirect_url"/>
                    <separator/>
                    <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                    <filter name="inactive" string="Inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_login_redirect_config" model="ir.actions.act_window">
            <field name="name">Login Redirect Configuration</field>
            <field name="res_model">login.redirect.config</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No redirect configuration yet. Create one to redirect specific users after login.
                </p>
            </field>
        </record>

        <!-- Menu Items -->
        <menuitem
            id="menu_login_redirect_root"
            name="Login Redirect"
            web_icon="login_redirect,static/description/icon.png"
            sequence="99"
            groups="base.group_system"/>

        <menuitem
            id="menu_login_redirect_config"
            name="Configurations"
            parent="menu_login_redirect_root"
            action="action_login_redirect_config"
            sequence="10"/>
    </data>
</odoo>
